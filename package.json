{
	"name": "balatrolator",
	"version": "1.0.1f",
	"license": "MIT",
	"description": "Balatrolator, a Balatro calculator",
	"author": {
		"name": "Philipp Rudloff",
		"url": "https://kleinfreund.de"
	},
	"homepage": "https://balatrolator.com",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kleinfreund/balatrolator.git"
	},
	"bugs": {
		"url": "https://github.com/kleinfreund/balatrolator/issues"
	},
	"keywords": [
		"Balatro",
		"score",
		"calculator"
	],
	"type": "module",
	"imports": {
		"#*": "./src/*"
	},
	"scripts": {
		"start": "vite",
		"start:debug": "cross-env VITE_DEBUG=true npm run start",
		"test:node": "vitest run",
		"test:node:debug": "cross-env VITE_DEBUG=true npm run test:node",
		"test:node:watch": "vitest watch",
		"test:node:watch:debug": "cross-env VITE_DEBUG=true npm run test:node:watch",
		"test:browser": "playwright test",
		"test:browser:ui": "playwright test --ui",
		"lint": "run-p lint:*",
		"lint:code-quality": "eslint",
		"lint:lockfile": "lockfile-lint --path package-lock.json --validate-hosts --allowed-hosts npm",
		"lint:types": "tsc --noEmit",
		"fix": "run-p fix:*",
		"fix:code-quality": "npm run lint:code-quality -- --fix",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky"
	},
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": "^24.12.0"
		},
		"packageManager": {
			"name": "npm",
			"version": "^11.6.2"
		}
	},
	"dependencies": {
		"lit-html": "3.3.2",
		"mathjs": "15.1.1"
	},
	"devDependencies": {
		"@commitlint/cli": "20.4.1",
		"@commitlint/config-conventional": "20.4.1",
		"@eslint/js": "9.39.2",
		"@playwright/test": "^1.58.2",
		"@stylistic/eslint-plugin": "5.8.0",
		"@tsconfig/node24": "^24.0.4",
		"@vitest/coverage-v8": "4.0.18",
		"cross-env": "10.1.0",
		"eslint": "9.39.2",
		"eslint-plugin-playwright": "^2.7.0",
		"globals": "17.3.0",
		"husky": "9.1.7",
		"jsdom": "27.4.0",
		"lockfile-lint": "5.0.0",
		"npm-run-all2": "8.0.4",
		"playwright": "^1.58.2",
		"typescript": "5.9.3",
		"typescript-eslint": "8.56.0",
		"vite": "7.3.1",
		"vitest": "4.0.18"
	}
}
